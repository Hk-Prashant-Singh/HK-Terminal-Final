<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0A0A0A"
        android:padding="10dp">
        <ImageView
            android:id="@+id/shieldLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@android:drawable/ic_lock_idle_lock" 
            android:layout_centerVertical="true"
            android:tint="#FF0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/shieldLogo"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="PS HACKER"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="monospace"
            android:textStyle="bold"/>
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A0A0A"
        app:tabTextColor="#555555"
        app:tabSelectedTextColor="#00FF00"
        app:tabIndicatorColor="#00FF00" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#111111"
        android:padding="2dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnUp"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="↑"
            android:textColor="#00FF00"
            android:backgroundTint="#222222"
            android:layout_marginEnd="5dp" />

        <Button
            android:id="@+id/btnDown"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="↓"
            android:textColor="#00FF00"
            android:backgroundTint="#222222"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0A0A0A"
        android:padding="5dp">
        <EditText
            android:id="@+id/inputCommand"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="root@pshacker:~#"
            android:textColorHint="#444444"
            android:textColor="#00FF00"
            android:background="@null"
            android:fontFamily="monospace"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionRun"/>
        <Button
            android:id="@+id/runButton"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:text="RUN"
            android:backgroundTint="#222222"
            android:textColor="#00FF00"/>
    </LinearLayout>
</LinearLayout>
