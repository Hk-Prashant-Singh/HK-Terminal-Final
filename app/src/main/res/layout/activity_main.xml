<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0A0A0A"
        android:padding="8dp">
        <ImageView
            android:id="@+id/shieldLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_lock_idle_lock" 
            android:layout_centerVertical="true"
            android:tint="#FF0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/shieldLogo"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="PS HACKER"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textStyle="bold"/>
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A0A0A"
        app:tabTextColor="#555555"
        app:tabSelectedTextColor="#00FF00"
        app:tabIndicatorColor="#00FF00" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0A0A0A"
        android:padding="5dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/inputCommand"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="root@pshacker:~#"
            android:textColorHint="#444444"
            android:textColor="#00FF00"
            android:background="@null"
            android:fontFamily="monospace"
            android:inputType="textNoSuggestions"
            android:imeOptions="actionSend"/> <ImageButton
            android:id="@+id/btnUp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@android:drawable/arrow_up_float"
            android:backgroundTint="#222222"
            android:tint="#00FF00"
            android:layout_marginEnd="2dp"
            android:contentDescription="History Up" />

        <ImageButton
            android:id="@+id/btnDown"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@android:drawable/arrow_down_float"
            android:backgroundTint="#222222"
            android:tint="#00FF00"
            android:contentDescription="History Down" />
    </LinearLayout>
</LinearLayout>
