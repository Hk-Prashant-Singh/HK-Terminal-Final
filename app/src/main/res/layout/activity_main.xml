<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout android:id="@+id/topBar" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <include layout="@layout/header_layout" />
        <com.google.android.material.tabs.TabLayout android:id="@+id/tabLayout" android:layout_width="match_parent" android:layout_height="45dp" android:background="#0A0A0A" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@+id/shortcutRow" />

    <LinearLayout
        android:id="@+id/shortcutRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#111111"
        android:padding="5dp"
        android:gravity="center">
        <Button android:id="@+id/btnCtrl" android:layout_width="45dp" android:layout_height="40dp" android:text="CTR" android:backgroundTint="#FF0000" />
        <Button android:id="@+id/btnDash" android:layout_width="35dp" android:layout_height="40dp" android:text="-" android:textColor="#00FF00" />
        <Button android:id="@+id/btnSlash" android:layout_width="35dp" android:layout_height="40dp" android:text="/" android:textColor="#00FF00" />
        <Button android:id="@+id/btnDot" android:layout_width="35dp" android:layout_height="40dp" android:text="." android:textColor="#00FF00" />
        <Button android:id="@+id/btnCLR" android:layout_width="45dp" android:layout_height="40dp" android:text="CL" android:textColor="#FFFF00" />
        <ImageButton android:id="@+id/btnUp" android:layout_width="35dp" android:layout_height="40dp" android:src="@android:drawable/arrow_up_float" />
        <ImageButton android:id="@+id/btnDown" android:layout_width="35dp" android:layout_height="40dp" android:src="@android:drawable/arrow_down_float" />
    </LinearLayout>
</RelativeLayout>
