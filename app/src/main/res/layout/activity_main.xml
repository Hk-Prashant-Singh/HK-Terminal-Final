<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A0A0A"
        app:tabTextColor="#555555"
        app:tabSelectedTextColor="#00FF00"
        app:tabIndicatorColor="#00FF00" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111111"
        android:stretchColumns="*">
        <TableRow>
            <Button style="?android:attr/borderlessButtonStyle" android:text="ESC" android:textColor="#FFF"/>
            <Button style="?android:attr/borderlessButtonStyle" android:text="/" android:textColor="#FFF"/>
            <Button style="?android:attr/borderlessButtonStyle" android:text="-" android:textColor="#FFF"/>
            <Button style="?android:attr/borderlessButtonStyle" android:text="HOME" android:textColor="#FFF"/>
            <Button style="?android:attr/borderlessButtonStyle" android:text="â†‘" android:textColor="#FFF"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0A0A0A"
        android:padding="5dp">
        <EditText
            android:id="@+id/inputCommand"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="root@pshacker:~#"
            android:textColorHint="#444444"
            android:textColor="#00FF00"
            android:background="@null"
            android:fontFamily="monospace"/>
        <Button
            android:id="@+id/runButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="RUN"
            android:backgroundTint="#333333"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>
