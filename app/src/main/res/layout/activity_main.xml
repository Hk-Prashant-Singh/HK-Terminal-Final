<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#0A0A0A"
            android:padding="10dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:tint="#FF0000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:text="PS HACKER"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="monospace" />
            <ProgressBar
                android:id="@+id/headerProgress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="gone" />
        </RelativeLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#0A0A0A"
            app:tabSelectedTextColor="#00FF00"
            app:tabIndicatorColor="#00FF00" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@+id/extraKeysLayout" />

    <LinearLayout
        android:id="@+id/extraKeysLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#111111"
        android:padding="5dp"
        android:orientation="horizontal">
        <Button android:id="@+id/btnCtrl" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp" android:text="CTR" android:textSize="10sp" android:backgroundTint="#333333" />
        <Button android:id="@+id/btnAlt" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp" android:text="ALT" android:textSize="10sp" android:backgroundTint="#333333" />
        <Button android:id="@+id/btnCb" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp" android:text="Cb" android:textColor="#00FF00" android:textSize="10sp" android:backgroundTint="#333333" />
        <Button android:id="@+id/btnCLR" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp" android:text="CL" android:textSize="10sp" android:backgroundTint="#333333" />
        <ImageButton android:id="@+id/btnUp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp" android:src="@android:drawable/arrow_up_float" android:backgroundTint="#333333" />
        <ImageButton android:id="@+id/btnDown" android:layout_width="0dp" android:layout_weight="1" android:layout_height="40dp" android:src="@android:drawable/arrow_down_float" android:backgroundTint="#333333" />
    </LinearLayout>
</RelativeLayout>
