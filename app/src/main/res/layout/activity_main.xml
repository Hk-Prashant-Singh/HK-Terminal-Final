<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#0A0A0A"
            android:padding="10dp">
            <ImageView
                android:id="@+id/shieldLogo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:tint="#FF0000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/shieldLogo"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="PS HACKER"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="monospace" />
        </RelativeLayout>
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#0A0A0A"
            app:tabSelectedTextColor="#00FF00"
            app:tabIndicatorColor="#00FF00" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@+id/shortcutRow" />

    <LinearLayout
        android:id="@+id/shortcutRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#111111"
        android:gravity="center"
        android:padding="5dp">
        <Button android:id="@+id/btnCLR" android:layout_width="45dp" android:layout_height="40dp" android:text="CL" android:textColor="#FFFF00" android:backgroundTint="#222222" />
        <Button android:id="@+id/btnDash" android:layout_width="35dp" android:layout_height="40dp" android:text="-" android:textColor="#00FF00" android:layout_marginStart="2dp" />
        <Button android:id="@+id/btnSlash" android:layout_width="35dp" android:layout_height="40dp" android:text="/" android:textColor="#00FF00" android:layout_marginStart="2dp" />
        <ImageButton android:id="@+id/btnUp" android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/arrow_up_float" android:layout_marginStart="5dp" />
        <ImageButton android:id="@+id/btnDown" android:layout_width="40dp" android:layout_height="40dp" android:src="@android:drawable/arrow_down_float" android:layout_marginStart="2dp" />
    </LinearLayout>
</RelativeLayout>
    
